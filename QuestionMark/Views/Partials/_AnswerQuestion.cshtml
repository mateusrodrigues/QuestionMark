<div class="modal fade" tabindex="-1" role="dialog" id="answerQuestionModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Responder Pergunta</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="questionIdToAnswer" />
                    <div class="form-group">
                        <label class="control-label col-md-2">Pergunta</label>
                        <div class="col-md-10">
                            <p id="questionToAnswer"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Resposta:</label>
                        <div class="col-md-10">
                            <textarea id="answerToQuestion" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="answerQuestion($('#questionIdToAnswer').val(), $('#answerToQuestion').val())">Enviar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->